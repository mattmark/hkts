{
  "name": "hkts",
  "description": "A collection of monads written in Typescript to control complexity and manage side effects.",
  "version": "0.1.0",
  "keywords": [],
  "main": "dist/hkts.umd.js",
  "module": "dist/hkts.es5.js",
  "typings": "dist/types/hkts.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "email": "matt.vandusen@float-left.co",
    "name": "Matthew Van Dusen"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "nyc --reporter=lcov --require ts-node/register tape tests/**/*-test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "test:watch": "",
    "test:coverage": "",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQoute": true
  },
  "devDependencies": {
    "@types/node": "^10.3.6",
    "@types/tape": "^4.2.32",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.6",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.15.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  }
}
